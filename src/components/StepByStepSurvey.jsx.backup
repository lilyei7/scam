          `);
          return;
        }
      }

      // Verificar soporte de c√°mara primero (con compatibilidad forzada)
      const browser = await checkCameraSupport();
      console.log(`üåê Navegador verificado: ${browser.browserName}`, browser);
      
      updateVerificationResult('processing', `üåê Configurando c√°mara para ${browser.browserName}...`);

      // Obtener funci√≥n getUserMedia con compatibilidad Safari
      const getUserMedia = getSafariCompatibleUserMedia();
      
      if (!getUserMedia) {
        throw new Error(`${browser.browserName} no soporta acceso a c√°mara. Actualiza tu navegador.`);
      }

      // Configuraci√≥n espec√≠fica por navegador
      let constraints = {
        audio: false,
        video: {
          width: { ideal: 640, min: 320, max: 1280 },
          height: { ideal: 480, min: 240, max: 720 },
          facingMode: 'user'
        }
      };

      // Configuraciones espec√≠ficas por navegador
      if (browser.isSafari || browser.isIOS) {
        // Safari/iOS necesita configuraciones m√°s espec√≠ficas
        constraints.video = {
          width: { ideal: 640 },
          height: { ideal: 480 },
          facingMode: { ideal: 'user' },
          frameRate: { ideal: 15, max: 24 }, // Safari funciona mejor con framerates m√°s bajos
        };
        updateVerificationResult('processing', 'üçé Configurando para Safari/iOS...');
      } else if (browser.isFirefox) {
        // Firefox a veces necesita configuraciones diferentes
        constraints.video.frameRate = { ideal: 20, max: 30 };
        updateVerificationResult('processing', 'ü¶ä Configurando para Firefox...');
      } else if (browser.isAndroid) {
        // Android Chrome puede necesitar ajustes
        constraints.video.frameRate = { ideal: 15, max: 25 };
        updateVerificationResult('processing', 'ü§ñ Configurando para Android...');
      }

      updateVerificationResult('processing', `üì± Solicitando acceso a c√°mara (${browser.browserName})...`);

      // Solicitar acceso a la c√°mara con reintentos
      let stream;
      let lastError;
      
      // Intentar con la configuraci√≥n completa
      try {
        stream = await getUserMedia(constraints);
      } catch (error) {
        console.warn('Primer intento fall√≥, probando con configuraci√≥n b√°sica:', error);
        lastError = error;
        
        // Intentar con configuraci√≥n m√°s b√°sica
        try {
          stream = await getUserMedia({
            audio: false,
            video: true
          });
        } catch (basicError) {
          console.warn('Segundo intento fall√≥, probando con facingMode espec√≠fico:', basicError);
          
          // √öltimo intento con configuraci√≥n m√≠nima
          try {
            stream = await getUserMedia({
              audio: false,
              video: { facingMode: 'user' }
            });
          } catch (finalError) {
            throw lastError || finalError;
          }
        }
      }
      
      if (videoRef.current && stream) {
        videoRef.current.srcObject = stream;
        
        // Configurar video espec√≠ficamente para cada navegador
        videoRef.current.setAttribute('playsinline', true);
        videoRef.current.setAttribute('webkit-playsinline', true);
        videoRef.current.setAttribute('controls', false);
        videoRef.current.muted = true;
        videoRef.current.autoplay = true;
        
        // Para Safari/iOS espec√≠ficamente
        if (browser.isSafari || browser.isIOS) {
          videoRef.current.setAttribute('webkit-playsinline', true);
          videoRef.current.setAttribute('playsinline', true);
        }
        
        // Esperar a que el video est√© listo con timeout
        const videoReadyPromise = new Promise((resolve, reject) => {
          const timeout = setTimeout(() => {
            reject(new Error('Timeout esperando que el video est√© listo'));
          }, 10000);
          
          videoRef.current.onloadedmetadata = async () => {
            clearTimeout(timeout);
            try {
              await videoRef.current.play();
              resolve();
            } catch (playError) {
              console.error('Error al reproducir video:', playError);
              // En algunos navegadores, especialmente Safari, necesitamos interacci√≥n del usuario
              reject(playError);
            }
          };
          
          videoRef.current.onerror = (error) => {
            clearTimeout(timeout);
            reject(error);
          };
        });

        try {
          await videoReadyPromise;
          
          updateVerificationResult('processing', `‚úÖ C√°mara lista en ${browser.browserName}. Inicializando Face-api.js...`);
          console.log('üé• C√°mara lista, iniciando Face-api.js...');

          // Inicializar Face-api.js con verificaci√≥n mejorada
          console.log('üß† Intentando inicializar Face-api.js...');
          
          try {
            const faceApiReady = await initializeFaceAPI();
            console.log('üß† Face-api.js resultado:', faceApiReady);
            
            if (!faceApiReady) {
              console.warn('‚ö†Ô∏è Face-api.js no se inicializ√≥, pero continuando...');
              updateVerificationResult('warning', `‚ö†Ô∏è Sistema b√°sico listo en ${browser.browserName} (detecci√≥n simplificada)`);
            } else {
              console.log('‚úÖ Face-api.js completamente inicializado');
              updateVerificationResult('success', `‚úÖ Sistema completo listo en ${browser.browserName}`);
            }
          } catch (faceApiError) {
            console.error('‚ùå Error inicializando Face-api.js:', faceApiError);
            updateVerificationResult('warning', `‚ö†Ô∏è Sistema b√°sico listo en ${browser.browserName} (sin IA avanzada)`);
          }
          
          console.log('‚úÖ Proceso de inicializaci√≥n completado');
          
        } catch (playError) {
          console.error('Error al reproducir video:', playError);
          updateVerificationResult('error', `‚ö†Ô∏è C√°mara iniciada pero requiere interacci√≥n. Toca la pantalla para activar en ${browser.browserName}.`);
        }
      }
    } catch (error) {
      const browser = getBrowserCapabilities();
      console.error('Error accessing camera:', error);
      
      let errorMessage = 'Error desconocido';
      
      if (error.name === 'NotAllowedError' || error.name === 'PermissionDeniedError') {
        errorMessage = `üö´ Permisos de c√°mara denegados en ${browser.browserName}. Por favor, permite el acceso y recarga.`;
      } else if (error.name === 'NotFoundError' || error.name === 'DevicesNotFoundError') {
        errorMessage = 'üì∑ No se encontr√≥ c√°mara en tu dispositivo.';
      } else if (error.name === 'NotSupportedError') {
        errorMessage = `‚ùå ${browser.browserName} no soporta acceso a c√°mara en este dispositivo.`;
      } else if (error.name === 'NotReadableError') {
        errorMessage = '‚ö†Ô∏è La c√°mara est√° siendo usada por otra aplicaci√≥n.';
      } else if (error.name === 'OverconstrainedError') {
        errorMessage = `‚öôÔ∏è Configuraci√≥n de c√°mara no compatible con ${browser.browserName}. Probando configuraci√≥n b√°sica...`;
        // Aqu√≠ podr√≠as implementar un reintento con configuraci√≥n m√°s b√°sica
      } else if (error.message) {
